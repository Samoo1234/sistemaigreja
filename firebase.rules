rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Regras para a coleção de configurações - qualquer usuário autenticado pode ler/escrever
    match /configuracoes/{document=**} {
      allow read: if true;  // Permite leitura para todos (inclusive não autenticados)
      allow write: if request.auth != null;  // Permite escrita apenas para usuários autenticados
    }
    
    // Regras para as demais coleções
    match /{collection}/{document=**} {
      allow read: if true;  // Acesso de leitura para desenvolvimento
      allow write: if request.auth != null;  // Apenas usuários autenticados podem escrever
    }
  }
} 